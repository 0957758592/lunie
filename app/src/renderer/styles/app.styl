@require './variables.styl'
@require './vendor/*'

global-reset()
reset-html5()

*
  box-sizing border-box

body
  df()
  height 100vh
  background c-app-bg url('../assets/images/background-grid.png')
  display flex
  flex-flow column

#app
  flex 1
  display flex
  flex-flow column

#app-content
  flex 1
  display flex
  flex-flow column
  margin 0 1rem

.ni-notifications
  top auto !important
  bottom 0 !important
  padding-bottom 0.5rem

.scrollable-area
  overflow-y scroll

a
  color link
  text-decoration none

body, input, button, textarea
  font-size x
  line-height 1.5
  font-family sans

strong
  font-weight 600

em
  font-style italic
